  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate --dataSource src/database/datasource.ts",
    "migration:run": "npm run typeorm -- migration:run --dataSource src/database/datasource.ts",
    "migration:revert": "npm run typeorm -- migration:revert --dataSource src/database/datasource.ts",
    "seed:products": "ts-node -r tsconfig-paths/register scripts/seed-products.ts",
    "seed:users": "ts-node -r tsconfig-paths/register scripts/seed-users.ts",
    "drop:users": "ts-node -r tsconfig-paths/register scripts/drop-users-table.ts"
  },
